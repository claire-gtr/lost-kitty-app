<div class="container">
  <div class="row">
    <div class="col">
      <% @pets.each do |pet| %>
        <h1><%= pet.name %></h1>
        <h3><%= pet.species %></h3>
        <p><em><%= pet.found_days_ago %></em></p>
        <%= link_to "See more about #{pet.name}", pet_path(pet), class: 'btn btn-primary mb-5'%>
      <% end %>
    </div>
  </div>
</div>
